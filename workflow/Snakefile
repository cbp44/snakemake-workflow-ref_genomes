configfile: "config/config.yaml"

rule all:
    input:
        "resources/genome.gtf",
        "resources/genome.fasta",
        "resources/genome.fasta.fai"

include: "rules/download.smk"

rule genome_faidx:
    input:
        "resources/genome.fasta",
    output:
        "resources/genome.fasta.fai",
    log:
        "logs/genome-faidx.log",
    cache: True
    wrapper:
        "0.77.0/bio/samtools/faidx"

